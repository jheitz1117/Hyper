<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="hyperNet">
      <section name="hyperNode" type="Hyper.Services.HyperNodeServices.Configuration.HyperNodeConfigurationSection, Hyper.Services.HyperNodeServices" />
    </sectionGroup>
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <system.serviceModel>
    <services>
      <service name="Hyper.Services.HyperNodeServices.HyperNodeService">
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:8001/HyperNode" />
          </baseAddresses>
        </host>
        <endpoint address="Bob" binding="netTcpBinding"
                  contract="Hyper.Services.HyperNodeContracts.IHyperNodeService" />
      </service>
    </services>
    <client>
      <endpoint name="Alice"
                address="net.tcp://localhost:8000/HyperNode/Alice"
                binding="netTcpBinding"
                contract="Hyper.Services.HyperNodeContracts.IHyperNodeService" />
    </client>
  </system.serviceModel>
  <hyperNet>
    <hyperNode name="Bob" enableActivityCache="true" activityCacheSlidingExpiration="5">
      <activityMonitors>
        <add name="TaskActivityTracer" type="Hyper.Services.HyperNodeHosting.TaskActivityTracer" enabled="true" />
        <!--<add name="DatabaseActivityMonitor" type="DatabaseActivityMonitor" enabled="false" />
        <add name="Log4NetMonitor" type="Log4NetMonitor" enabled="false" />-->
      </activityMonitors>
    </hyperNode>
  </hyperNet>
</configuration>